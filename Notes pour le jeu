/*DEBUT DE TP FLOOD-IT 

*/
*/Fonction qui perme
int **alloueMatrice(int l, int c){

   int **M; //de la forme M[2][3] 
   M = malloc(l*sizeof(int *));
   
   for(int i=0; i<l; ++i){
   M[i] = malloc(c*sizeof(int));
   }
   return M;
}

void detruitMatrice(int ***ptr, int l){
    int **M = *ptr;
    for(int i=0; i<l; ++i){
    	free(M[i]);
    } 
    free(M);
    (*ptr) = NULL;
}
